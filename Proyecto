from tkinter import*
import random

pantalla = Tk()
pantalla.geometry("700x500")
pantalla.title("SIMULADOR DE RECETARIO")

Tops = Frame(pantalla,bg="blue",width =700,height=50,relief=SUNKEN)
Tops.pack(side=TOP)

f1 = Frame(pantalla,width = 700,height=100,relief=SUNKEN)
f1.pack(side=LEFT)


titulo = Label(Tops, font=( 'aria' ,30, 'bold' ),text="SIMULADOR DE RECETARIO",fg="steel blue",bd=10,anchor='w')
titulo.grid(row=0,column=0)


#---------------------------------------------------------------------------------------
dia = StringVar()
jugo = StringVar()
sandwich = StringVar()
almuerzo = StringVar()
ensalada = StringVar()
cena = StringVar()
lunesJugo = StringVar()
lunesSandwich = StringVar()
lunesAlmuerzo= StringVar()
lunesEnsaladas= StringVar()
lunesCena= StringVar()
martesJugo = StringVar()
martesSandwich = StringVar()
martesAlmuerzo= StringVar()
martesEnsaladas= StringVar()
martesCena= StringVar()
miercolesJugo = StringVar()
miercolesSandwich = StringVar()
miercolesAlmuerzo= StringVar()
miercolesEnsaladas= StringVar()
miercolesCena= StringVar()
juevesJugo = StringVar()
juevesSandwich = StringVar()
juevesAlmuerzo= StringVar()
juevesEnsaladas= StringVar()
juevesCena= StringVar()
viernesJugo = StringVar()
viernesSandwich = StringVar()
viernesAlmuerzo= StringVar()
viernesEnsaladas= StringVar()
viernesCena= StringVar()
sabadoJugo = StringVar()
sabadoSandwich = StringVar()
sabadoAlmuerzo= StringVar()
sabadoEnsaladas= StringVar()
sabadoCena= StringVar()
domingoJugo = StringVar()
domingoSandwich = StringVar()
domingoAlmuerzo= StringVar()
domingoEnsaladas= StringVar()
domingoCena= StringVar()

lbldia = Label(f1, font=( 'aria' ,16, 'bold' ),text="Día: ",fg="steel blue",bd=10,anchor='w')
lbldia.grid(row=0,column=0)
txtdia = Entry(f1,font=('ariel' ,16,'bold'), textvariable=dia, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtdia.grid(row=0,column=1)

lbljugo = Label(f1, font=( 'aria' ,16, 'bold' ),text="Jugo o ensalada: ",fg="steel blue",bd=10,anchor='w')
lbljugo.grid(row=1,column=0)
txtjugo = Entry(f1,font=('ariel' ,16,'bold'), textvariable=jugo, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtjugo.grid(row=1,column=1)

lblsandwich = Label(f1, font=( 'aria' ,16, 'bold' ),text="Sandwich:",fg="steel blue",bd=10,anchor='w')
lblsandwich.grid(row=2,column=0)
txtsandwich = Entry(f1,font=('ariel' ,16,'bold'), textvariable=sandwich, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtsandwich.grid(row=2,column=1)

lblalmuerzo = Label(f1, font=( 'aria' ,16, 'bold' ),text="Almuerzo: ",fg="steel blue",bd=10,anchor='w')
lblalmuerzo.grid(row=3,column=0)
txtalmuerzo = Entry(f1,font=('ariel' ,16,'bold'), textvariable=almuerzo, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtalmuerzo.grid(row=3,column=1)

lblensalada = Label(f1, font=( 'aria' ,16, 'bold' ),text="Ensalada: ",fg="steel blue",bd=10,anchor='w')
lblensalada.grid(row=4,column=0)
txtensalada = Entry(f1,font=('ariel' ,16,'bold'), textvariable=ensalada, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtensalada.grid(row=4,column=1)

lblcena = Label(f1, font=( 'aria' ,16, 'bold' ),text="Cena:",fg="steel blue",bd=10,anchor='w')
lblcena.grid(row=5,column=0)
txtcena = Entry(f1,font=('ariel' ,16,'bold'), textvariable=cena, bd=6,insertwidth=4,bg="powder blue" ,justify='right')
txtcena.grid(row=5,column=1)

#botones
def play():

    a = random.randint(0, 6)
    b = random.randint(0, 6)
    c = random.randint(0, 6)
    d = random.randint(0, 6)
    e = random.randint(0, 6)
    jugos = ['papaya', 'fresa', 'mango', 'lucuma', 'piña', 'maracuya', 'melon']
    sandwiches = ['palta', 'jamon y queso', 'tortilla', 'huevo', 'hot dog', 'royal', 'carne']
    almuerzos = ['tallarines rojos', 'arroz chaufa', 'seco de pollo', 'milanesa de pollo ', 'lomo saltado', 'jalea', 'arroz con mariscos ']
    ensaladas = ['rusa', 'caprese', 'fattoush', 'cesar', 'Manzana y nuez', 'Espinaca', 'pasta']
    cenas = ['Sofrito de camarones', 'Tazón griego de quínoa', 'Shakshuka de garbanzos', 'Frittata de batatas', 'Faux Pho', 'Lo Mein', 'lomo de salmón']

    if (dia.get()=='lunes'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        lunesJugo.set(jugos[a])
        lunesSandwich.set(sandwiches[b])
        lunesAlmuerzo.set(almuerzos[c])
        lunesEnsaladas.set(ensaladas[d])
        lunesCena.set(cenas[e])
    elif (dia.get()=='martes'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        martesJugo.set(jugos[a])
        martesSandwich.set(sandwiches[b])
        martesAlmuerzo.set(almuerzos[c])
        martesEnsaladas.set(ensaladas[d])
        martesCena.set(cenas[e])
    elif (dia.get()=='miercoles'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        miercolesJugo.set(jugos[a])
        miercolesSandwich.set(sandwiches[b])
        miercolesAlmuerzo.set(almuerzos[c])
        miercolesEnsaladas.set(ensaladas[d])
        miercolesCena.set(cenas[e])
    elif (dia.get()=='jueves'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        juevesJugo.set(jugos[a])
        juevesSandwich.set(sandwiches[b])
        juevesAlmuerzo.set(almuerzos[c])
        juevesEnsaladas.set(ensaladas[d])
        juevesCena.set(cenas[e])
    elif (dia.get()=='viernes'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        viernesJugo.set(jugos[a])
        viernesSandwich.set(sandwiches[b])
        viernesAlmuerzo.set(almuerzos[c])
        viernesEnsaladas.set(ensaladas[d])
        viernesCena.set(cenas[e])
    elif (dia.get()=='sabado'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        sabadoJugo.set(jugos[a])
        sabadoSandwich.set(sandwiches[b])
        sabadoAlmuerzo.set(almuerzos[c])
        sabadoEnsaladas.set(ensaladas[d])
        sabadoCena.set(cenas[e])
    elif (dia.get()=='domingo'):
        jugo.set(jugos[a])
        sandwich.set(sandwiches[b])
        almuerzo.set(almuerzos[c])
        ensalada.set(ensaladas[d])
        cena.set(cenas[e])
        domingoJugo.set(jugos[a])
        domingoSandwich.set(sandwiches[b])
        domingoAlmuerzo.set(almuerzos[c])
        domingoEnsaladas.set(ensaladas[d])
        domingoCena.set(cenas[e])
    else:
        dia.set("")

def next():
    dia.set("")
    jugo.set("")
    sandwich.set("")
    almuerzo.set("")
    ensalada.set("")
    cena.set("")

btnnext=Button(f1,padx=16,pady=8, bd=10 ,fg="black",font=('ariel' ,16,'bold'),width=10, text="NEXT", bg="powder blue",command=next)
btnnext.grid(row=7, column=2)

btnplay=Button(f1,padx=16,pady=8, bd=10 ,fg="black",font=('ariel' ,16,'bold'),width=10, text="PLAY", bg="powder blue",command=play)
btnplay.grid(row=7, column=1)

def menu():
    root = Tk()
    root.geometry("1200x220+0+0")
    root.title("Menú")
# Dias de la semana
